            <!-- Table Section -->
            <div class="mb-8">
                <h2 class="text-xl sm:text-2xl font-bold text-gray-800 text-center mb-6">ตารางเปรียบเทียบค่าใช้จ่ายตามขนาดใช้ยา (บาท)</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-4 text-left text-sm font-bold text-gray-600 uppercase tracking-wider">ขนาดใช้ยา (mg)</th>
                                <th scope="col" class="px-4 py-4 text-right text-sm font-bold uppercase tracking-wider th-custom-blue">กลุ่ม 1: Mvasi 100mg</th>
                                <th scope="col" class="px-4 py-4 text-right text-sm font-bold uppercase tracking-wider th-custom-red">กลุ่ม 2: Avastin 100mg</th>
                                <th scope="col" class="px-4 py-4 text-right text-sm font-bold uppercase tracking-wider th-custom-green">กลุ่ม 3: Avastin (ผสม)</th>
                                <th scope="col" class="px-4 py-4 text-left text-sm font-bold uppercase tracking-wider th-custom-orange">รายละเอียดการผสมยา (กลุ่ม 3)</th>
                                <th scope="col" class="px-4 py-4 text-center text-sm font-bold uppercase tracking-wider th-custom-purple">% ส่วนลด</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <!-- Data rows will be inserted here by script -->
                        </tbody>
                    </table>
                </div>
            </div>


    <script>
        const data = [
            { dosage: 100, mvasi: 2768, avastin100: 7764, avastinCombo: 7764, comboDetail: "1 x 100mg" },
            { dosage: 200, mvasi: 5536, avastin100: 15528, avastinCombo: 14715, comboDetail: "1 x 400mg" },
            { dosage: 300, mvasi: 8304, avastin100: 23292, avastinCombo: 14715, comboDetail: "1 x 400mg" },
            { dosage: 400, mvasi: 11072, avastin100: 31056, avastinCombo: 14715, comboDetail: "1 x 400mg" },
            { dosage: 500, mvasi: 13840, avastin100: 38820, avastinCombo: 22479, comboDetail: "1 x 400mg + 1 x 100mg" },
            { dosage: 600, mvasi: 16608, avastin100: 46584, avastinCombo: 29430, comboDetail: "2 x 400mg" },
            { dosage: 700, mvasi: 19376, avastin100: 54348, avastinCombo: 29430, comboDetail: "2 x 400mg" },
            { dosage: 800, mvasi: 22144, avastin100: 62112, avastinCombo: 29430, comboDetail: "2 x 400mg" },
            { dosage: 900, mvasi: 24912, avastin100: 69876, avastinCombo: 37194, comboDetail: "2 x 400mg + 1 x 100mg" },
            { dosage: 1000, mvasi: 27680, avastin100: 77640, avastinCombo: 44145, comboDetail: "3 x 400mg" }
        ];

        // Calculate savings percentage
        const processedData = data.map(row => {
            const savings = row.avastin100 > 0 ? ((row.avastin100 - row.avastinCombo) / row.avastin100) * 100 : 0;
            return { ...row, savings: savings };
        });

        const tableBody = document.querySelector('tbody');

        function formatCurrency(number) {
            return new Intl.NumberFormat('th-TH', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(number);
        }

        processedData.forEach((row, index) => {
            const tr = document.createElement('tr');
            if (index % 2 !== 0) {
                tr.className = 'bg-gray-50';
            }
            tr.innerHTML = `
                <td class="px-4 py-4 whitespace-nowrap text-base font-medium text-gray-900">${row.dosage}</td>
                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-700 text-right">${formatCurrency(row.mvasi)}</td>
                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-700 text-right">${formatCurrency(row.avastin100)}</td>
                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-700 text-right font-semibold">${formatCurrency(row.avastinCombo)}</td>
                <td class="px-4 py-4 whitespace-nowrap text-base text-gray-800 text-left">${row.comboDetail}</td>
                <td class="px-4 py-4 whitespace-nowrap text-base text-center">
                    ${row.savings > 0 ? 
                    `<span class="font-bold text-green-600">
                        ↓ ${row.savings.toFixed(2)}%
                    </span>` : 
                    `<span class="text-gray-500">-</span>`}
                </td>
            `;
            tableBody.appendChild(tr);
        });
    </script>
